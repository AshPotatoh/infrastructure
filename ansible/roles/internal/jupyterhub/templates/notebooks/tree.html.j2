{% if jupyterhub_alert != "" -%}
<div id="header-announcements" class="container">
<span id="messages"><div class="alert alert-danger">{{ jupyterhub_alert }}<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div></span>
</div>
{% endif -%}
{% if jupyterhub_announcement != "" -%}
<div id="header-announcements" class="container">
<span id="messages"><div class="alert alert-info">{{ jupyterhub_announcement }}<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div></span>
</div>
{% endif %}
